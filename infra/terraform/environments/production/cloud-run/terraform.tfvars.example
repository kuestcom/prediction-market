project_id                           = "my-gcp-project"
region                               = "us-central1"
service_name                         = "kuest-web"
app_image                            = "ghcr.io/kuestcom/prediction-market@sha256:replace-with-digest"
site_url                             = "https://markets.example.com"
secret_version                       = "latest"
allow_unauthenticated                = true
ingress                              = "INGRESS_TRAFFIC_ALL"
min_instances                        = 0
max_instances                        = 10
container_concurrency                = 80
timeout_seconds                      = 300
cpu_limit                            = "1"
memory_limit                         = "1Gi"

secret_env = {
  BETTER_AUTH_SECRET        = "BETTER_AUTH_SECRET"
  REOWN_APPKIT_PROJECT_ID  = "REOWN_APPKIT_PROJECT_ID"
  CRON_SECRET               = "CRON_SECRET"
  POSTGRES_URL              = "POSTGRES_URL"
  ADMIN_WALLETS             = "ADMIN_WALLETS"
  KUEST_ADDRESS             = "KUEST_ADDRESS"
  KUEST_API_KEY             = "KUEST_API_KEY"
  KUEST_API_SECRET          = "KUEST_API_SECRET"
  KUEST_PASSPHRASE          = "KUEST_PASSPHRASE"

  # Choose one storage profile:
  # Supabase mode
  SUPABASE_URL              = "SUPABASE_URL"
  SUPABASE_SERVICE_ROLE_KEY = "SUPABASE_SERVICE_ROLE_KEY"

  # S3 mode (use this trio when SUPABASE_* is not set)
  # S3_BUCKET               = "S3_BUCKET"
  # S3_ACCESS_KEY_ID        = "S3_ACCESS_KEY_ID"
  # S3_SECRET_ACCESS_KEY    = "S3_SECRET_ACCESS_KEY"
}

